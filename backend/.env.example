# Database (REQUIRED: Set up local Postgres)
DB_URL = "postgresql+psycopg2://postgres:admin123@localhost:5432/cctv_db"
  # e.g., via Docker

# Security (REQUIRED: Generate secrets)
JWT_SECRET_KEY=your_32_byte_hex_secret_here  # REQUIRED: openssl rand -hex 32
ACCESS_TOKEN_EXPIRE_MINUTES=30  # Default: 30 min

# Server (Defaults OK for dev)
HOST=0.0.0.0
PORT=8000

# Celery/Redis (REQUIRED: Set up local Redis)
REDIS_URL=redis://localhost:6379/0  # e.g., via Docker

# FCM (Optional: For mobile push notifications; use legacy server key or service account JSON path)
FCM_SERVER_KEY=your_fcm_server_key_here  # Optional: Skip for local testing (tasks log but skip sends)

# Blockchain (Defaults for local Hardhat/Ganache)
WEB3_RPC_URL=http://127.0.0.1:8545  # Local Ethereum node
EVIDENCE_REGISTRY_ADDRESS=0xYourDeployedContractAddress  # Optional: Deploy contract first

# Origins (CORS: Defaults for local dev)
FRONTEND_URL=http://localhost:3000  # React/Vue app
MOBILE_URL=http://localhost:19006  # React Native Expo